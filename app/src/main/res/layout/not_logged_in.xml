<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_not_logged"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/not_logged"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_logged"
        android:text="Niste prijavljeni. Prijavite se da bi ste nastavili."
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:gravity="center"/>

    <Button
        android:id="@+id/dugme_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prijavite se"
        android:backgroundTint="?attr/colorSecondary"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_below="@id/not_logged"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>