<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nema_internet"
    android:background="?attr/colorPrimary">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_nema_internet"
        android:id="@+id/ico_ni"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/problem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nešto nije u redu."
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/problem"/>

    <Button
        android:id="@+id/TryAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/problem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Pokušajte ponovo"
        android:textColor="@color/white"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/problem"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:visibility="gone" />

</RelativeLayout>