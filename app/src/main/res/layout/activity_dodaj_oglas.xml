<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dodajOglas"
    android:background="?attr/colorPrimaryVariant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_margin="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="Postavljanje novog oglasa"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addOglas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dodaj Oglas"
            android:textColor="@color/white"
            android:layout_below="@+id/describeOglas"
            android:layout_centerHorizontal="true"
            android:backgroundTint="?attr/colorSecondary"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Izaberite grad:"
            android:layout_above="@id/cityForOglas"
            android:layout_alignStart="@id/cityForOglas"/>

        <Spinner
            android:id="@+id/cityForOglas"
            android:layout_width="248dp"
            android:layout_height="44dp"
            android:layout_above="@+id/describeOglas"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/describeOglas"
            android:layout_width="267dp"
            android:layout_height="119dp"
            android:ems="10"
            android:inputType="text|textMultiLine|textCapSentences"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:hint="Dodajte opis svom oglasu"
            android:gravity="bottom"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>