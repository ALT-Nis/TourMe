<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="?attr/colorPrimaryVariant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_margin="35dp">

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Prijavljivanje na nalog"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/email_login"
            android:layout_alignLeft="@id/email_login"/>

        <EditText
            android:id="@+id/email_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/password"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="30dp"
            android:layout_alignLeft="@id/password_login"
            android:layout_above="@id/password_login"/>

        <EditText
            android:id="@+id/password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/email_login"
            android:layout_alignEnd="@id/email_login"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/buttonForShowingPasswordLogin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@id/password_login"
            android:layout_toRightOf="@id/password_login"/>

        <Button
            android:id="@+id/login_dugme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prijavi se"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/password_login"
            android:backgroundTint="?attr/colorSecondary"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/login_dugme"
            android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/bezNaloga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nemate nalog?"
            android:layout_below="@+id/login_dugme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goToRegister"
            android:clickable="true"
            android:text="Registrujte se ovde."
            android:layout_toRightOf="@id/bezNaloga"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>