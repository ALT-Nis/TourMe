<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/oglas_bg"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/oglas_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_profp" />

        <RatingBar
            android:id="@+id/ratingStars"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/ime"
            android:numStars="5"
            android:rating="0" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/oglas_image"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/oglas_image"
            android:text=""
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ime"
            android:layout_alignTop="@id/oglas_image"
            android:layout_toEndOf="@id/oglas_image"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/prezime"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/ime"
            android:layout_alignBottom="@id/ime"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/grad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/oglas_image"
            android:layout_alignStart="@id/ime"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSD"
            android:textSize="13sp"
            android:layout_marginStart="3dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/grad"/>

        <TextView
            android:id="@+id/cena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/rsd"
            android:layout_toStartOf="@id/rsd"
            android:text=""
            android:textSize="18sp" />

</RelativeLayout>