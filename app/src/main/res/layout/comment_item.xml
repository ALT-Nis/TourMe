<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/oglas_bg"
    android:layout_margin="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_profp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/comment_image"
        android:text="Ime korisnika"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/deskripcija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="opis oglasa"
        android:layout_toEndOf="@id/comment_image"
        android:layout_below="@id/username"
        android:layout_marginLeft="10dp"/>

    <RatingBar
        android:id="@+id/ratingStars"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_image"
        android:layout_marginTop="5dp"
        android:numStars="5"
        android:rating="0"/>

</RelativeLayout>